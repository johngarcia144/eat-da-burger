<h1 class="ml-5 text-center">EAT-DA-BURGER</h1>

<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>


<div class="card-body ml-5">
  <div class="card text-center">

    <h2 class="card-title">Add A Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label class="font-weight-bold" for="burger">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
  </div>

