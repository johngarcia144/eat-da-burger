<h1 class="ml-5 text-center">EAT-DA-BURGER</h1>
<img src="/assets/image/burger.png" class="burger">
<div class="row">
  

  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <h2 class="ml-5 text-center">BURGERS-TA-EAT</h2>
<ol>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ol>
</div>


<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
  <h2 class="ml-5 text-center">BURGERS-YA-ATE</h2>
<ol>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ol>
</div>
</div>


<div class="card-body ml-5">
  <div class="card text-center">

    <h2 class="card-title">Add A Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label class="font-weight-bold" for="burger">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
  </div>

